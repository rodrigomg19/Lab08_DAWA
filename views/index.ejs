<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD de Usuarios</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container p-5">
        <h1>Usuarios</h1>
        <form action="/users" method="POST">
            <div class="form-group">
                <label for="name">Nombre:</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirmar Contraseña:</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
            </div>
            <% if (messages.error && messages.error.length) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% messages.error.forEach(function(error) { %>
                            <li>
                                <%= error %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <% } %>
                    <button type="submit" class="btn btn-primary">Crear Usuario</button>
        </form>

        <hr>
        <h2>Lista de Usuarios</h2>

        <ul class="list-group">
            <% users.forEach((user)=> { %>
                <li class="list-group-item">
                    <%= user.name %> (<%= user.email %>)
                            <a class="btn btn-success mx-2 float-right" href="/users/edit/<%= user._id %>">Editar</a>
                            <a class="btn btn-danger mx-2 float-right" href="/users/delete/<%= user._id %>">Eliminar</a>
                </li>
                <% }) %>
        </ul>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>